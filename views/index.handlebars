<div class="container main">
  <div class="jumbotron">

    <div class="row">
      <div class="col-12">
        <h1 class="text-center"><i class="fad fa-cheeseburger"></i> All these burgers are for me! <i class="fad fa-hamburger"></i></h1>
      </div>
    </div>
    <br>

    <div class="row">

      <div class="col-md-6 col-12 text-left">
        <div class="jumbox">
          <h2>All the burgers<br>I'm close to eating:</h2>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>

      <div class="col-md-6 col-12 text-left">
        <div class="jumbox">
          <h2>All the burgers<br>I've eaten before:</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>

    </div>

    <!-- Form -->
    <div class="row justify-content-md-center">
      <div class="col-6 text-center">
        <br>
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <button class="btn btn-info" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="alertError" tabindex="-1" role="dialog" aria-labelledby="alertError" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Error</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Please write a burger's name between 1 and 20 characters!
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>